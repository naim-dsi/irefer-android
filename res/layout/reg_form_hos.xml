<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E0FFFF"
    android:paddingTop="20dip"
    >
        
<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip" android:layout_marginRight="5dip" 
    >   
	<TextView android:text="@string/last_name" android:layout_height="wrap_content" 
    	android:textColor="#FFFFFF" android:textSize="16dip" android:layout_width="85dp"/>
	<EditText android:layout_height="wrap_content" android:id="@+id/lastNameText" android:layout_weight="1" android:layout_width="0dip"></EditText>
</LinearLayout>

<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
    >
	<TextView android:text="@string/first_name" android:layout_height="wrap_content" 
		android:textColor="#FFFFFF" android:textSize="16dip" android:layout_width="85dp"/>
	<EditText android:layout_height="wrap_content" android:id="@+id/firstNameText" android:layout_weight="1" android:layout_width="0dp"></EditText>
</LinearLayout>

<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
    >
	<TextView android:text="@string/email" android:layout_height="wrap_content" 
		android:textColor="#800000" android:textSize="16dip" android:layout_width="85dp"/>
	<EditText android:layout_height="wrap_content" 
		android:inputType="textEmailAddress"
		android:id="@+id/emailText" android:layout_weight="1" android:layout_width="0dp"></EditText>
</LinearLayout>

<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
    >
	<TextView android:text="@string/hospital" android:layout_height="wrap_content" 
		android:textColor="#FFFFFF" android:textSize="16dip" android:layout_width="85dp"/>
	<Spinner android:id="@+id/user_type_spinner" android:layout_weight="1" android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"/>  
</LinearLayout>
    	
<Button android:id="@+id/regSubmit" 
	android:layout_height="wrap_content" 
	android:text="Submit"
	android:layout_marginLeft="2dip" 
	android:layout_marginRight="5dip"
	android:layout_width="fill_parent">
	</Button>
		
</LinearLayout>
