<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/t7_480x720"
    android:paddingTop="20dip"
    >
        
<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 -->
 <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
    >
	<TextView android:text="@string/email" android:layout_height="wrap_content" 
		android:textColor="#FFFFFF" android:textSize="16dip" android:layout_width="50dp"/>
	<EditText android:layout_height="wrap_content" android:id="@+id/actEmailText" 
	android:inputType="textEmailAddress"
	android:layout_weight="1" android:layout_width="0dp"></EditText>
</LinearLayout>

<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip" android:layout_marginRight="5dip"
    >
	<TextView android:text="@string/act_code" android:layout_height="wrap_content" 
		android:textColor="#FFFFFF" android:textSize="16dip" android:layout_width="115dp"/>
	<EditText android:layout_height="wrap_content" android:id="@+id/activationCode" 
	    android:inputType="number" android:layout_weight="1" android:layout_width="0dp"></EditText>
</LinearLayout>
    	
<Button android:id="@+id/actSubmit" 
	android:layout_height="wrap_content" 
	android:text="Activate" android:background="@drawable/custom_button"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="2dip" 
	android:layout_marginRight="5dip"
	android:layout_width="fill_parent">
	</Button>
		
</LinearLayout>
