<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/t7_480x720"
    >
	
<!-- 	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
	<LinearLayout 
       android:id="@+id/doc_list_adv_top_wrapper"
       android:layout_height="wrap_content" android:background="#66151B54"
       android:paddingLeft="2dip" android:paddingRight="2dip"
       android:layout_width="fill_parent"
       android:focusable="true"
       android:focusableInTouchMode="true">
    	<EditText android:id="@+id/doc_search_adv_text_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:hint="Search Key"
                android:singleLine="true" /> 		 
    </LinearLayout>
    
    <ListView
    	android:id="@+id/doctor_list_adv"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/doc_list_adv_top_wrapper"
        android:background="#00E0FFFF"
    	android:cacheColorHint="#00000000"/>
    
<!--     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
    <LinearLayout 
       android:id="@+id/doc_list_adv_bottom_wrapper"
       android:layout_height="wrap_content" android:visibility="gone"
       android:layout_width="fill_parent"
       android:layout_alignParentBottom="true">
    	<TextView android:id="@+id/doc_search_adv_footer"
                android:layout_width="fill_parent"
                android:layout_height="22dip"
                android:singleLine="true"
                android:textColor="#C34A2C" 
                android:background="#BBA1A1A1"
                android:textSize="14dip"
                android:gravity="center"
                android:text="0 item found"/> 		 
    </LinearLayout>
    
    	
 </RelativeLayout>
 