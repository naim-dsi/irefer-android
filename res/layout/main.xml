<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollView01"
android:layout_width="fill_parent" android:background="@drawable/t7_480x720"
android:layout_height="fill_parent">
<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:background="#00E0FFFF" android:focusable="true"
       android:focusableInTouchMode="true"
    >
	
<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
	android:id="@+id/mainHeadlineWrapper" android:background="@drawable/custom_button3" 
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dip" android:layout_marginBottom="20dip">

<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">
<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout 
    android:layout_width="0dp" android:gravity="left"  android:layout_weight="1" 
    android:layout_height="wrap_content"
    android:orientation="vertical">
<TextView android:id="@+id/headLabel1" 
    android:layout_height="wrap_content" 
    android:text="@string/headline"
    android:textColor="#82CAFF"
    android:textSize="20dip"
    android:layout_width="fill_parent"/>
    
<TextView android:id="@+id/headLabel2"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    android:textColor="#FFFFFF"
    android:textSize="14dip"/>
</LinearLayout>
<Button android:id="@+id/home_about_button" 
	android:layout_width="40dip"
	android:text="" android:textSize="24dip" 
	android:typeface="serif" android:textColor="#FFF" android:textStyle="bold"
	android:background="@drawable/action_bar_help" android:layout_height="40dp" 
	android:layout_gravity="center"></Button>
	
</LinearLayout>

<TextView  android:id="@+id/userLabel1"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="User: "
    android:textColor="#FFFFFF"
    android:textSize="20dip"
    />
<TextView  android:id="@+id/userLabel2" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Email: "
    android:textColor="#FFFFFF"
    android:textSize="20dip"
    />
<TextView  android:id="@+id/userLabel3"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Your activation code will be send via email. If received please activate the application"
    android:textColor="#FFFFFF"
    android:textSize="14dip"
    />
    
    <EditText android:id="@+id/main_all_search_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:hint="All Search"
                android:visibility="gone"
                android:singleLine="true" />
 
  <Button android:id="@+id/buttonSearch" 
	android:text="" 
	android:background="#121212" android:layout_gravity="center_horizontal" 
	android:layout_width="125dp" android:layout_height="125dp">
	</Button>

</LinearLayout>

<Button android:id="@+id/home_button1" 
	android:layout_height="wrap_content" 
	android:text="PCP Registration" 
	android:textColor="#5C0000"	android:textStyle="bold"
	android:background="@drawable/custom_button"
	android:layout_width="fill_parent">
	</Button>
	
<Button android:id="@+id/button2" 
	android:layout_height="wrap_content" 
	android:text="Hospitalist Registration" 
	android:layout_marginTop="8dip"
	android:textColor="#5C0000" android:textStyle="bold"
	android:background="@drawable/custom_button"
	android:layout_width="fill_parent">
	</Button>
	
<Button android:id="@+id/button3" 
	android:layout_height="wrap_content" 
	android:text="Already Registered" 
	android:layout_marginTop="8dip"
	android:textColor="#5C0000" android:textStyle="bold"
	android:background="@drawable/custom_button"
	android:layout_width="fill_parent">
	</Button>
	
<Button android:id="@+id/home_setup_button" 
	android:layout_height="wrap_content" 
	android:text="Setup" 
	android:layout_marginTop="8dip"
	android:textColor="#5C0000" android:textStyle="bold"
	android:background="@drawable/custom_button"
	android:layout_width="fill_parent">
	</Button>
	
</LinearLayout>

</ScrollView>
	