<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollView01"
android:layout_width="fill_parent" android:background="@drawable/t7_480x720"
android:layout_height="fill_parent">
<!-- <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip"
    android:background="#00E0FFFF"
    android:layout_height="wrap_content" android:weightSum="1">
	
<ImageView
        android:id="@+id/doc_pic"
        android:layout_marginBottom="10dip"
        android:src="@drawable/doc_icon" android:layout_gravity="center_horizontal" android:layout_width="229dp" android:layout_height="wrap_content"/>
    
 <TextView
	     android:id="@+id/first_name"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="28dip"
	     android:gravity="center_vertical"	     
 />
 
 <TextView
	     android:id="@+id/middle_name"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 />	
 
  <TextView
	     android:id="@+id/last_name"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
	 />
 
 	<TextView
	     android:id="@+id/gender"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
	 /> 	 	 	 	 	 	
 
  <TextView
	     android:id="@+id/degree"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
  />
  	 
	<TextView
	     android:id="@+id/language"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 	/>
 	
	<TextView
	     android:id="@+id/grade"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 	/>
 	
	<TextView
	     android:id="@+id/practice"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 	/>
 	
	<TextView
	     android:id="@+id/hostpital"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 	/> 	 	 	 	 	 	 	 	
 	
	<TextView
	     android:id="@+id/speciality"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 	/>
 	
	<TextView
	     android:id="@+id/insurance"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
 	/> 	 	
 	
 	   <Button
	     android:id="@+id/phone"
	     android:layout_width="fill_parent"
	     android:layout_height="0dip"
	     android:layout_weight="1"
	     android:textColor="#000000"
	     android:textSize="18dip"
	     android:gravity="center_vertical"
	     android:background="@drawable/custom_button"
	 />
 	
</LinearLayout>

</ScrollView>
	