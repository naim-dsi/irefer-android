<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#7DC2FD"
                android:endColor="#4A99DD"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#646060" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#174A7E"
                android:startColor="#40608C"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#646060" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/orange" />
</selector>
